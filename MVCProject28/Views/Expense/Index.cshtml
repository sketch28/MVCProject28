@model IEnumerable<MVCProject28.Models.Expense>

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Expensens List</h2>
            </div>
            <div class="col-6 text-right">
             <a  asp-controller="Expense" asp-action="Create" class="btn btn-primary"> Create new Expense</a>
            </div>
        </div>
        <br />


 @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped"style="width:100%">
            <thead>
                <tr>
                    <th>
                       Expense
                    </th>
                    <th>
                        Amount
                    </th>
                 
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model)
                {
                    <tr>
                        <td width="30%">@expense.ExpensesName</td>
                        <td width="30%">@expense.Amount</td>
                        <td width="40%">
                            <div class="col-6 text-right">
             <a  asp-controller="Expense" asp-action="Update" class="btn btn-primary"> Update</a>
              <a  asp-controller="Expense" asp-action="Delete" class="btn btn-primary"> Delete</a>
            </div>

                        </td>
                       
                       

                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>NO ITEMS CREATED YET</p>

    }

    </div>
